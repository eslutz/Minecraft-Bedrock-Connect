# BedrockConnect Environment Configuration
# Copy this file to .env and customize as needed

# Java Memory Settings (adjust based on your Raspberry Pi model)
# Pi 4 (4GB+): JAVA_OPTS=-Xms512M -Xmx1G or -Xms1G -Xmx2G
# Pi 4 (2GB): JAVA_OPTS=-Xms256M -Xmx512M or -Xms512M -Xmx1G
# Pi 3: JAVA_OPTS=-Xms256M -Xmx512M
JAVA_OPTS=-Xms512M -Xmx1G

# BedrockConnect Configuration
# All settings are optional and have defaults

# Server port (default: 19132)
# BC_PORT=19132

# Bind IP (default: 0.0.0.0 - all interfaces)
# BC_BIND_IP=0.0.0.0

# Maximum number of servers per player (default: 100)
# BC_SERVER_LIMIT=100

# Path to custom servers JSON file
# BC_CUSTOM_SERVERS=/app/custom_servers.json

# Allow users to add their own servers (default: true)
# BC_USER_SERVERS=true

# Show featured servers (default: true)
# BC_FEATURED_SERVERS=true

# Fetch featured server IPs (default: true)
# BC_FETCH_FEATURED_IPS=true

# Kick inactive players (default: true)
# BC_KICK_INACTIVE=true

# Store player display names (default: true)
# BC_STORE_DISPLAY_NAMES=true

# Enable online mode (default: true)
# BC_ONLINE_MODE=true

# Enable debug logging (default: false)
# BC_DEBUG=false

# Database Configuration (optional - uses local JSON files by default)
# DB_TYPE options: none, mysql, mariadb, postgres
# BC_DB_TYPE=none
# BC_DB_HOST=localhost
# BC_DB_DB=bedrock-connect
# BC_DB_USER=root
# BC_DB_PASS=password
# BC_DB_AUTORECONNECT=false

# Language file (optional)
# BC_LANGUAGE=/app/language.json

# MOTD file (optional)
# BC_MOTD_FILE=/app/motd.txt

# Show MOTD on first join (default: true)
# BC_MOTD_FIRST_JOIN=true

# MOTD cooldown in minutes (default: 0)
# BC_MOTD_COOLDOWN=0

# Packet rate limiting (default: 200)
# BC_PACKET_LIMIT=200

# Global packet rate limiting (default: system default)
# BC_GLOBAL_PACKET_LIMIT=100000

# Whitelist file (optional)
# BC_WHITELIST=/app/whitelist.json
